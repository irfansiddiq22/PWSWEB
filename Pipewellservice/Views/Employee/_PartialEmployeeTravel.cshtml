<div class="blue">
    <h5>Employee Travel</h5>
</div>


<div class="border p-2">
    <div id="dvClearanceList">
        <div class="p-3 border my-2">
            <div class="row">

                <div class="form-group col-md-3 row">
                    <label class="col-md-2 col-form-label p-0"> Employee:</label>
                    <div class="col">
                        <select class="js-example-basic-single js-states form-control" id="ddEmployeeCode" name="EmployeeCode" data-placeholder="Type to search" data-allow-clear="true"></select>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <button class="btn btn-sm btn-primary" onclick="NewClearance()">Add Clearance </button>
                </div>
            </div>
        </div>
        <table class="table table-sm table-striped table-hover-warning table-bordered table-responsive">
            <thead class="blue">
                <tr>
                    <th>ID</th>
                    <th>EmployeeID</th>

                    <th>Contact</th>
                    <th>HandOver</th>
                    <th>Last Working Date</th>
                    <th>Clearance Date</th>
                    <th>Prepared By</th>
                    <th>Employee Name</th>
                    <th>Department Name</th>
                    <th>Position</th>
                    <th>Nationality</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tblEmployeeClearanceList"></tbody>
        </table>
    </div>
    <div id="dvEditClearance">
        <form id="frmClearance">
            <div class="border">
                <div class="blue p-1 "><h4>Employee Travel</h4></div>
                <div class="p-4">
                    
                        <div class="row">
                            <!-- First Column -->
                            <div class="col-md-6">
                                <!-- Row 1 -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <!-- Travel Order Number -->
                                        <div class="form-group">
                                            <label for="travelOrderNo">Travel Order No:</label>
                                            <input type="text" class="form-control" id="travelOrderNo" name="travelOrderNo">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <!-- Date -->
                                        <div class="form-group">
                                            <label for="date">Date:</label>
                                            <input type="text" class="form-control" id="date" name="date">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <!-- Route Info -->
                                        <div class="form-group">
                                            <label for="routeInfo">Route Info:</label>
                                            <input type="text" class="form-control" id="routeInfo" name="routeInfo">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <!-- Airline -->
                                        <div class="form-group">
                                            <label for="airline">Airline:</label>
                                            <input type="text" class="form-control" id="airline" name="airline">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <!-- Class -->
                                        <div class="form-group">
                                            <label for="class">Class:</label>
                                            <input type="text" class="form-control" id="class" name="class">
                                        </div>
                                    </div>
                                </div>
                                <!-- Row 2 -->
                                <div class="row">
                                    <div class="col-md-3">
                                        
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="chargeToPerson" name="chargeToPerson">
                                            <label class="form-check-label" for="chargeToPerson">Charge to Person:</label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <!-- Special Needs -->
                                        
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="specialNeeds" name="specialNeeds">
                                            <label class="form-check-label" for="isEmergency">Special Needs</label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <!-- Is Emergency -->
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="isEmergency" name="isEmergency">
                                            <label class="form-check-label" for="isEmergency">Is Emergency</label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <!-- Employee -->
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="employee" name="employee">
                                            <label class="form-check-label" for="employee">Employee</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Second Column -->
                            <div class="col-md-6">
                                <!-- Approval Dropdowns -->
                                <div class="form-group">
                                    <label for="approval1">Approval 1:</label>
                                    <select class="form-control" id="approval1" name="approval1">
                                        <!-- Options for Approval 1 -->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="approval2">Approval 2:</label>
                                    <select class="form-control" id="approval2" name="approval2">
                                        <!-- Options for Approval 2 -->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="approval3">Approval 3:</label>
                                    <select class="form-control" id="approval3" name="approval3">
                                        <!-- Options for Approval 3 -->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="approval4">Approval 4:</label>
                                    <select class="form-control" id="approval4" name="approval4">
                                        <!-- Options for Approval 4 -->
                                    </select>
                                </div>
                            </div>
                        </div>

                    <div class="my-3">

                        <button class="btn btn-primary ms-5" type="submit" onclick="SaveEmployeeClearance()">Save</button>
                        <button class="btn btn-danger" type="reset" onclick="CancelNewClearance()">Clear</button>


                    </div>
                </div>





            </div>
        </form>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/lib/hr/employeeclearance")
}