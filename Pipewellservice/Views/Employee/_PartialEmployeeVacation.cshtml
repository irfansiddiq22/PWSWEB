                                        <select class="supervisor form-select" id="ddApproval10" name="ddApproval10" data-placeholder="Type to search" data-allow-clear="true"></select>
                                    </div>

                                    <div class="form-group">
                                        <label for="ddApproval11">Approval From:</label>
                                        <select class="supervisor form-select" id="ddApproval11" name="ddApproval11" data-placeholder="Type to search" data-allow-clear="true"></select>
                                    </div>
                                </div>

                            </div>



                        </div>
                    </div>

                    <div class="my-3">

                        <button class="btn btn-primary ms-5" type="submit" onclick="SaveEmployeeVacation();">Save</button>
                        <button class="btn btn-danger" type="reset" onclick="CancelNewVacation()">Clear</button>


