

<div class="border m-auto">
    <div class="my-2 p-2 writecontainer">
        <div class="border p-4 w-75 m-auto">
            <div class="row">

                <div class="form-group col-md-4">
                    <label class="col-form-label"> Employee:</label>
                    <select class="form-select" id="ddEmployeeCode" name="EmployeeCode" data-placeholder="Type to search" data-allow-clear="true"></select>
                </div>

                <div class="form-group col-md-4">
                    <label class="col-form-label"> Date Range:</label>
                    <input type="text" name="ddlReportDataRange" id="ddlReportDataRange" class="form-control form-control-sm daterangepicker" autocomplete="off">
                </div>
                <div class="form-group col-md-4 m-auto">

                    <div><label class="switch"><input type="radio" id="chkInOut" name="AttendenceType" checked="checked"><div class="slider round"></div></label> In Out Activity</div>
                    <div>
                        <label class="switch"><input type="radio" id="chkSummary" name="AttendenceType"><div class="slider round"></div></label> Summary
                    </div>
                    <div>
                        <label class="switch"><input type="radio" id="chkDetailAttendence" name="AttendenceType"><div class="slider round"></div></label> Attendence
                    </div>
                    <button class="btn btn-sm btn-primary" onclick="ShowAttendenceReport()">Preview </button>

                </div>
                
            </div>

        </div>

    </div>


</div>
@section Scripts{
    @Scripts.Render("~/lib/hr/attendencereport")
}