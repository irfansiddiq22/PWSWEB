    <script type="text/javascript">
//        moment.locale('ar-SA');

        $(function () {
            $(".fim-dropdown > label").click(function () {
                $(".fim-dropdown").not($(this).parent()[0]).removeClass('active');

                $(this).parent().toggleClass('active');
                return false;
            });

            $(document).click(function (e) {
                that = e.target;
                if ($(that).closest(".fim-dropdown").length < 1 && !$(that).hasClass("fim-dropdown")) $(".fim-dropdown").removeClass('active');
            });


            $(".datepicker").datepicker({
                autoclose: true,
                todayHighlight: false,
                format: 'dd/mm/yyyy'
            })
            $.post("/Auth/Identity", {}, function (resp) {
                User = resp;
                $(".UserName").text(User.Name);
                _Init();
            }).fail(function () {
                HideSpinner();
            })
            
            var d = null
            if('@Html.Raw(ViewBag.Parent)'!='')d=$.parseJSON('@Html.Raw(ViewBag.Parent)');

            LoadBreadCrumb(d,'@ViewBag.Title');
        })
    </script>
