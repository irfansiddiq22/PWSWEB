<h2>Settings</h2>

<div class="m-auto">

    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-division-tab" data-bs-toggle="tab" data-bs-target="#nav-division" type="button" role="tab" aria-controls="nav-division" aria-selected="true">Division</button>
            <button class="nav-link" id="nav-positions-tab" data-bs-toggle="tab" data-bs-target="#nav-positions" type="button" role="tab" aria-controls="nav-positions" aria-selected="false">Positions</button>
            <button class="nav-link" id="nav-departments-tab" data-bs-toggle="tab" data-bs-target="#nav-departments" type="button" role="tab" aria-controls="nav-departments" aria-selected="false">Departments</button>
            <button class="nav-link" id="nav-users-tab" data-bs-toggle="tab" data-bs-target="#nav-users" type="button" role="tab" aria-controls="nav-users" aria-selected="false">Users</button>
        </div>

        <div class="tab-content border m2 p-3" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-division" role="tabpanel" aria-labelledby="nav-division-tab">
                <div class="m-auto w-50">
                    <div class="border p-5 ">
                        <form>
                            <div class="mb-3 row">

                                <label for="txtDivisionName" class="col-sm-1 col-form-label">Name</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control form-control-sm" id="txtDivisionName">
                                </div>
                                <div class="col-sm-5">
                                    <button type="button" class="btn  btn-success" onclick="SaveDivision()">Save</button>
                                    <button class="btn  btn-danger" type="reset">Clear</button>
                                </div>

                            </div>
                        </form>
                        <div class="mt-2">
                            <table class="table table-sm table-bordered table-hover-warning table-striped">
                                <thead class="table-primary">
                                    <tr><th></th><th>Name</th><th></th></tr>
                                </thead>
                                <tbody id="tblDivisionList"></tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <div class="tab-pane fade" id="nav-positions" role="tabpanel" aria-labelledby="nav-positions-tab">
                <div class="m-auto w-50">
                    <div class="border p-5 ">
                        <form>
                            <div class="mb-3 row">

                                <label for="txtPositionName" class="col-sm-1 col-form-label">Name</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control form-control-sm" id="txtPositionName">
                                </div>
                                <div class="col-sm-5">
                                    <button type="button" class="btn  btn-success" onclick="SavePosition()">Save</button>
                                    <button class="btn  btn-danger" type="reset">Clear</button>
                                </div>

                            </div>
                        </form>
                        <div class="mt-2">
                            <table class="table table-sm table-bordered table-hover-warning table-striped">
                                <thead class="table-primary">
                                    <tr><th></th><th>Name</th><th></th></tr>
                                </thead>
                                <tbody id="tblPositionList"></tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <div class="tab-pane fade" id="nav-departments" role="tabpanel" aria-labelledby="nav-departments-tab">
                <div class="m-auto w-50">
                    <div class="border p-5 ">
                        <form>
                            <div class="mb-3 row">

                                <label for="txtDepartmentName" class="col-sm-1 col-form-label">Name</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control form-control-sm" id="txtDepartmentName">
                                </div>
                                <div class="col-sm-5">
                                    <button type="button" class="btn  btn-success" onclick="SaveDepartment()">Save</button>
                                    <button class="btn  btn-danger" type="reset">Clear</button>
                                </div>

                            </div>
                        </form>
                        <div class="mt-2">
                            <table class="table table-sm table-bordered table-hover-warning table-striped">
                                <thead class="table-primary">
                                    <tr><th></th><th>Name</th><th></th></tr>
                                </thead>
                                <tbody id="tblDepartmentList"></tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <div class="tab-pane fade" id="nav-users" role="tabpanel" aria-labelledby="nav-users-tab">
                <div class="m-auto w-50">
                    <div class="border p-5 ">
                        <form id="frmUsers" name="frmUsers">
                            <div class="mb-3 row">

                                <label for="txtUserName" class="col-sm-1 col-form-label">Name</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control form-control-sm" id="txtUserName" name="txtUserName" required>
                                </div>
                                <div class="col-sm-5">
                                </div>

                            </div>
                            <div class="mb-3 row">

                                <label for="txtUserPassword" class="col-sm-1 col-form-label">Password</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control form-control-sm" id="txtUserPassword" name="txtUserPassword" required>
                                </div>
                                <div class="col-sm-5">
                                    <button type="submit" class="btn  btn-success" onclick="SaveUser()">Save</button>
                                    <button class="btn  btn-danger" type="reset">Clear</button>
                                </div>

                            </div>
                        </form>
                        <div class="mt-2">
                            <table class="table table-sm table-bordered table-hover-warning table-striped">
                                <thead class="table-primary">
                                    <tr><th></th><th>Name</th><th></th></tr>
                                </thead>
                                <tbody id="tblUserList">
                                    <tr><td>1</td><td>2 </td></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </nav>


</div>

@section Scripts{
    @Scripts.Render("~/bundles/sweetalert")
    @Scripts.Render("~/lib/hr/setting")

    @Styles.Render("~/bundles/sweetalertcss")
}