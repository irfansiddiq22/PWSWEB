

<div class="m-auto">

    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-users-tab" data-bs-toggle="tab" data-bs-target="#nav-users" type="button" role="tab" aria-controls="nav-users" aria-selected="false">Users</button>
            <button class="nav-link" id="nav-per-tab" data-bs-toggle="tab" data-bs-target="#nav-permission" type="button" role="tab" aria-controls="nav-users" aria-selected="false">Permission</button>
        </div>

        <div class="tab-content border m2 p-3" id="nav-tabContent">

            <div class="tab-pane fade active show" id="nav-users" role="tabpanel" aria-labelledby="nav-users-tab">
                <div class="row">
                    <div class="col-md-7 ">
                        <div class="border p-2">
                            <div class="input-group mb-3">

                                <input type="text" class="form-control" placeholder="Find a user" id="txtFindUser">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="btnFindUser"><i class="fa fa-search"></i></button>
                                </div>
                            </div>

                            <table class="table table-sm table-bordered table-hover-warning table-striped">
                                <thead class="blue">
                                    <tr><th></th><th>Name</th><th>User Name</th><th>Employee ID</th><th></th></tr>
                                </thead>
                                <tbody id="tblUserList"></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md ">
                        <div class="blue"><h5>Add/Edit User</h5></div>
                        <div class="border p-2">


                            <form id="frmUsers" name="frmUsers">
                                <div class="mb-3 row">

                                    <label for="txtUserName" class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-5">
                                        <input type="text" class="form-control form-control-sm" id="txtName" name="txtName" required>
                                    </div>
                                    <div class="col-sm-5">
                                    </div>

                                </div>
                                <div class="mb-3 row">

                                    <label for="txtUserName" class="col-sm-2 col-form-label">User Name</label>
                                    <div class="col-sm-5">
                                        <input type="text" class="form-control form-control-sm" id="txtUserName" name="txtUserName" required>
                                    </div>
                                    <div class="col-sm-5">
                                    </div>
                                </div>
                                <div class="mb-3 row">

                                    <label for="txtUserName" class="col-sm-2 col-form-label">Email Address:</label>
                                    <div class="col-sm-5">
                                        <input type="email" class="form-control form-control-sm" id="txtUserEmailAddress" name="txtUserEmailAddress" required>
                                    </div>
                                    <div class="col-sm-5">
                                    </div>
                                </div>
                                <div class="mb-3 row">

                                    <label for="txtUserPassword" class="col-sm-2 col-form-label">Password</label>
                                    <div class="col-sm-5">
                                        <input type="text" class="form-control form-control-sm" id="txtUserPassword" name="txtUserPassword" required>
                                    </div>
                                    <div class="col-sm-5">

                                    </div>

                                </div>
                                <div class="mb-3 row">

                                    <label for="txtUserName" class="col-sm-2 col-form-label">User Group</label>
                                    <div class="col-sm-5">
                                        <select class="form-select form-control-sm" id="ddUserGroups"></select>
                                    </div>
                                    <div class="col-sm-5">
                                    </div>

                                </div>
                                <div class="mb-3 row">

                                    <label for="txtUserName" class="col-sm-2 col-form-label">Permissions</label>
                                    <div class="col-sm-5">
                                        <select class="form-select form-control-sm" id="ddUserPermissions"></select>
                                    </div>
                                    <div class="col-sm-5">
                                        <button type="submit" class="btn  btn-success" onclick="SaveUser()">Save</button>
                                        <button class="btn  btn-danger" type="reset">Clear</button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

            <div class="tab-pane fade" id="nav-permission" role="tabpanel" aria-labelledby="nav-per-tab">
                <div class="m-auto w-50">
                    <div class="border p-5 ">
                        <div class="mt-2">
                            <table class="table table-sm table-bordered table-hover-warning table-striped">
                                <thead class="blue">
                                    <tr><th></th><th>Name</th><th></th></tr>
                                </thead>
                                <tbody id="tblPermissionGroups"></tbody>
                            </table>
                        </div>

                        <form id="frmPermissions" name="frmPermissions">
                            <div class="border">
                                <div class="blue"> Add/Edit Permissions</div>
                                <div class="p-2">
                                    <div class="mb-3 row">
                                        <label for="txtUserName" class="col-sm-1 col-form-label">Name</label>
                                        <div class="col-sm-5">
                                            <input type="text" class="form-control form-control-sm" id="txtPermissionGroupName" name="txtPermissionGroupName" required>
                                        </div>
                                        <div class="col-sm-5">
                                            <button type="button" class="btn btn-primary btn-sm" onclick="SaveGroupPermissions()">Save</button>
                                            <button class="btn btn-sm  btn-danger" type="reset">Clear</button>
                                        </div>
                                    </div>
                                    <table class="table table-sm table-striped1 border" id="tblPermissionGroup"></table>
                                </div>
                            </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </nav>


</div>

@section Scripts{
    @Scripts.Render("~/bundles/sweetalert")
    @Scripts.Render("~/bundles/treegrid")
    @Scripts.Render("~/lib/setting/setting")
    @Styles.Render("~/Content/treegrid")

    @Styles.Render("~/bundles/sweetalertcss")
}