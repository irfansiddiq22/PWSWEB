
<div class="border p-2">
    <div id="dvStoreItemList">

        <div class=" writecontainer">
            

            <div class="border mb-2">
                <div class="blue p-1"><h6>Item Managment</h6></div>
                <form id="frmItemManagement">
                    <div class="p-4">

                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="ItemCodeAbv">Code Abv:</label>
                                    <select class="form-select" id="ddItemCodeAbv" name="ItemCodeAbv">
                                        <option value="A">A</option>
                                        <option value="B">B</option>
                                        <option value="C">C</option>
                                        <option value="D">D</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label for="ItemCode">Item Code:</label>
                                    <input type="text" class="form-control form-control-sm" id="txtItemCode" name="ItemCode" readonly required>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="ItemName">Item Name:</label>
                                    <input type="text" class="form-control form-control-sm" id="txtItemName" name="ItemName">
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="ItemPart">Part:</label>
                                    <input type="text" class="form-control form-control-sm" id="txtItemPart" name="ItemPart">
                                </div>
                            </div>

                            <div class="col-md">
                                <div class="form-group">
                                    <label for="ItemLocation">Location:</label>
                                    <input type="text" class="form-control form-control-sm" id="txtItemLocation" name="ItemLocation">
                                </div>
                            </div>

                            <div class="col-md">
                                <div class="form-group">
                                    <label for="ItemUnit">Unit:</label>
                                    <input type="text" class="form-control form-control-sm" id="txtItemUnit" name="ItemUnit" list="ddItemUnits">
                                    <datalist id="ddItemUnits"></datalist>


                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <label for="ItemStockQty">Op.Stock Qty:</label>
                                    <input type="number" class="form-control form-control-sm" id="txtOpeningStock" name="ItemStockQty">
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <label for="ItemStockQty">Available Qty:</label>
                                    <input type="number" class="form-control form-control-sm" id="txtItemStockQuantity" name="StockQuantity">
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <label for="ItemReOrderLimit">ReOrder Limit:</label>
                                    <input type="number" class="form-control form-control-sm" id="txtItemReOrderLimit" name="ItemReOrderLimit">
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <label for="Itempacking">Packing:</label>
                                    <input type="number" class="form-control form-control-sm" id="txtItemPacking" name="Itempacking">
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="ItemType">ItemType:</label>
                                    <select class="form-select form-select-sm" id="ddItemType" name="ItemType">
                                        <option value="1">Tangible</option>
                                        <option value="0">InTangible</option>
                                    </select>
                                </div>
                            </div>


                        </div>
                        <div class="row">

                            <div class="col col-md-auto">
                                <div class="form-check form-check-inline ">
                                    <label class="switch"><input type="checkbox" id="ChkStockItem"><div class="slider round"></div></label> Stock Item
                                </div>
                                <div class="form-check form-check-inline ">
                                    <label class="switch"><input type="checkbox" id="ChkCriticalItem"><div class="slider round"></div></label> Critical Item
                                </div>
                                <div class="form-check form-check-inline ">
                                    <label class="switch"><input type="checkbox" id="ChkActiveItem"><div class="slider round"></div></label> Active
                                </div>
                            </div>
                            <div class="col-md">

                                <label class="custom-file-upload btn btn-primary">
                                    <input type="file" id="ItemFile" />
                                    <i class="fa fa-cloud-upload"></i> Upload Image
                                </label>
                                <button class="btn btn-primary ms-5" type="submit" onclick="SaveItem()">Save</button>
                                <button class="btn btn-danger" type="reset">Clear</button>
                            </div>

                        </div>

                    </div>
                </form>
                <div class="m-2 border p-2">
                    <div class="input-group">

                        <input type="text" class="form-control" placeholder="Find item" id="txtFindStoreItem">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" onclick="return FillStoreItems()"><i class="fa fa-search"></i></button>
                        </div>
                    </div>

                </div>
            </div>





        </div>





        <table class="table table-sm table-striped table-hover-warning table-bordered table-responsive">
            <thead class="blue">
                <tr>
                    <th>Item Code</th>
                    <th>Name </th>

                    <th>Unit</th>
                    <th>Opening Stock Qty</th>
                    <th>ReOrder Limit</th>
                    <th>Location</th>
                    <th>Packing</th>
                    <th>Part Number</th>
                    <th>Stock</th>
                    <th>Cretical Item</th>
                    <th>Active</th>
                    <th>Tengible</th>

                    <th></th>
                </tr>
            </thead>
            <tbody id="tblStoreItemList"></tbody>
        </table>
        <div id="dvStoreItemPaging"></div>
    </div>

</div>
@section Scripts{
    @Scripts.Render("~/bundles/pagination")
    @Scripts.Render("~/lib/procurement/store/item")
    @Styles.Render("~/bundles/paginationcss")
}