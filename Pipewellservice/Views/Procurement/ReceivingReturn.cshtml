
<div class="border p-2">
    <div id="dvReceivingList">
        <div class="p-3 border my-2">

            <div class="row">

                <div class="form-group col-md-3 row">
                    <label class="col-md-2 col-form-label p-0"> Supplier:</label>
                    <div class="col">
                        <select class="form-select" id="ddSuppliers" name="ddSuppliers" data-placeholder="Type to Search" data-allow-clear="true"></select>
                    </div>
                </div>

                <div class="form-group col-md-2 row">
                    <label class="col-md-auto col-form-label p-0"> Rec #:</label>
                    <div class="col position-relative">
                        <input type="number" name="txtRecordNumber" id="txtRecordNumber" class="form-control form-control-sm" autocomplete="off">
                    </div>
                </div>
                <div class="form-group col-md-2 row">
                    <label class="col-md-auto col-form-label p-0"> P.O #:</label>
                    <div class="col position-relative">
                        <input type="number" name="txtPurchaseOrderNumber1" id="txtPurchaseOrderNumber1" class="form-control form-control-sm" autocomplete="off">
                    </div>
                </div>

                <div class="form-group col-md-2 row">
                    <label class="col-md-auto col-form-label p-0"> Date Range:</label>
                    <div class="col position-relative">
                        <input type="text" name="ddlRecordDataRange" id="ddlRecordDataRange" class="form-control form-control-sm daterangepicker" autocomplete="off">
                    </div>
                </div>

                <div class="form-group col-md-2">
                    <button class="btn btn-sm btn-primary" onclick="BindStoreReceiving()">Search </button>
                    <button class="btn btn-sm btn-success" onclick="NewStoreReceiving()">Add Return </button>
                </div>

            </div>




        </div>
        <div class="table-responsive">
            <table class="table table-sm table-striped table-hover-warning table-bordered table-responsive">
                <thead class="blue">
                    <tr>
                        <th>ID</th>
                        <th>Rec #</th>
                        <th>Receiving Date </th>
                        <th>Return Date </th>

                        <th>Return By </th>

                        <th>I.P.O</th>
                        <th>P.O #</th>
                        <th>Invoice #</th>
                        

                        <th>Remarks</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody id="tblReceiving"></tbody>
            </table>
            <div id="dvReceivingPaging"></div>
        </div>

    </div>

    <div class="container mt-5 writecontainer d-none" id="dvAddReceiving">
        <div class="border">
            <div class="blue p-1"><h6>Receiving Return</h6></div>
            <div class="p-4">
                <form id="frmData">
                    <div class="row mb-3">
                        <div class="col-md-2">
                            <label for="date" class="form-label">Date</label>
                            <input type="text" class="form-control form-control-sm datepicker" id="txtRecordDate">
                        </div>
                        <div class="col-md-2">
                            <label for="txtReceivingRecordNumber" class="form-label">Rec #</label>
                            <input type="number" class="form-control form-control-sm" id="txtReceivingRecordNumber" required onblur="FindReceivingDetail()">
                        </div>

                        <div class="col-md-2">
                            <label for="txtPurchaseOrderNumber" class="form-label">P.O #</label>
                            <input type="number" class="form-control form-control-sm" id="txtPurchaseOrderNumber" required >
                        </div>
                        <div class="col-md-2 d-none">
                            <label for="txtInernalPurchaseOrderNumber" class="form-label">I.P.R #</label>
                            <input type="number" class="form-control form-control-sm" id="txtInernalPurchaseOrderNumber" required>
                        </div>

                        <div class="col-md-2">
                            <label for="txtVendorInvoice" class="form-label">Vendor Invoice #</label>
                            <input type="number" class="form-control form-control-sm" id="txtVendorInvoice" required>
                        </div>

                        <div class="col-md-2">
                            <label for="quotationNo" class="form-label">Invoice Date.</label>
                            <input type="text" class="form-control form-control-sm datepicker" id="txtInvoiceDate">
                        </div>
                    </div>
                        <div class="row mb-3">

                            <div class="col-md-2">
                                <label for="quotationNo" class="form-label">D.Notes</label>
                                <input type="text" class="form-control form-control-sm" id="txtDeliveryNotes">
                            </div>


                            <div class="col-md-2">
                                <label for="quotationNo" class="form-label">D.Date</label>
                                <input type="text" class="form-control form-control-sm" id="txtDeliveryDate">
                            </div>


                        </div>


                    <div class="mb-3">
                        <table class="table tablebordered table-striped border">
                            <thead class="blue">
                                <tr>
                                    <th></th>
                                    <th>Item</th>
                                    <th>Description</th>


                                    <th>Unit</th>
                                    <th>Note</th>
                                    <th>Receiving Qty</th>



                                    <th>Return Quantity</th>
                                    <th>Expiry</th>
                                </tr>
                            </thead>
                            <tbody id="itemsTable"></tbody>
                        </table>
                    </div>
                    
                    <div class="row mb-3">

                        <div class="col-md-12">
                            <label for="remarks" class="form-label">Remarks</label>
                            <input type="text" class="form-control form-control-sm" id="txtRemarks">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label for="preparedBy" class="form-label">Prepared By</label>
                            <input type="text" class="form-control form-control-sm" id="txtPreparedBy" value="" readonly>
                        </div>
                        <div class="col-md-2">
                            <label for="preparedDate" class="form-label">Date</label>
                            <input type="text" class="form-control form-control-sm datepicker" id="txtReturnedDate" value="2024-06-27">
                        </div>
                        <div class="col-md-3">
                            <label for="preparedBy" class="form-label">Returned By</label>
                            <select class="form-select form-select-sm" id="ddEmployeeCode"></select>
                        </div>
                        

                    </div>
                    <div class="my-3 row">

                        <div class="col-md-auto">
                            <button class="btn btn-primary" type="button" onclick="SaveOrderReceiving()">Save</button>
                        </div><div class="col-md-auto">
                            <button class="btn btn-danger" type="button" onclick="ResetNav()">Cancel</button>
                        </div> <div class="col-md-auto">
                            <button class="btn btn-danger" type="button" onclick="NewStoreReceiving()">Clear</button>

                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/pagination")
    @Scripts.Render("~/bundles/typeahead")

    @Scripts.Render("~/lib/procurement/store/receivingreturn")
    @Styles.Render("~/bundles/paginationcss")
}